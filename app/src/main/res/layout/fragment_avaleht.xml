<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avalehe_tervitus"
        android:gravity="center"
        android:theme="@style/TervitusTekst"
        android:layout_margin="16dp"/>

    <View style="@style/EraldusjoonHorisontaalne"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/avaleht_suvaline_sona"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/AvalehtTekst"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tekstivaade_avaleht_suvaline_sona_inglise_keeles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:theme="@style/AvalehtTekst"/>
        <TextView
            android:id="@+id/tekstivaade_avaleht_suvaline_sona_eesti_keeles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:theme="@style/AvalehtTekst"/>
    </LinearLayout>

    <Button
        android:id="@+id/nupp_avaleht_jargmine_sona"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:drawableStart="@drawable/jargmine_suvaline_sona"
        android:text="@string/nupp_avaleht_jargmine_suvaline_sona"/>

    <View style="@style/EraldusjoonHorisontaalne"/>

</LinearLayout>